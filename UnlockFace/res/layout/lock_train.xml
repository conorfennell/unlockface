    android:layout_height="fill_parent"
    >

<TableLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:stretchColumns="1"
	android:padding="10dip" android:weightSum="1">
   
	<TextView android:padding="10dip" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_weight="0.13" android:text="" android:layout_gravity="center_horizontal" android:id="@+id/lockTrainText"/>
	<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/lockPhone" android:text="@string/lock_phone"></Button>
	<Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/trainFacialRecognition" android:text="@string/train_facial_recognition"></Button>
	</TableLayout>
</ScrollView>
